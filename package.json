{
  "name": "retro-dev-portfolio",
  "version": "1.0.0",
  "description": "A minimalist developer portfolio with parallax effects",
  "main": "src/js/main.js",
  "type": "module",
  "scripts": {
    "dev": "npx serve -l 3000 --no-clipboard",
    "dev:network": "npx serve -l 3000 -n --no-clipboard",
    "dev:https": "npx serve -l 3000 -n --ssl-cert cert.pem --ssl-key key.pem --no-clipboard",
    "build": "npm run lint && npm run format:check",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint 'src/**/*.js' --fix",
    "lint:css": "stylelint 'src/**/*.css' --fix",
    "lint:html": "htmlhint '*.html' --config .htmlhintrc",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "validate": "npm run lint && npm run format:check && npm run test",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "check": "npm run validate",
    "serve": "npx serve",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html"
  },
  "keywords": [
    "portfolio",
    "web",
    "frontend",
    "minimalist",
    "parallax",
    "portfolio",
    "terminal"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "serve": "^14.2.1",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-order": "^6.0.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
